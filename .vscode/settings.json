{
    "emeraldwalk.runonsave": { 
        "commands": [
            {
                // Run whenever any markdown file is saved
                "match": "\\.md$",
                "isAsync": true,
                "cmd": "uvx mdformat ${fileBasename}"
            },
            {
                // Run whenever any python file is saved
                "match": "\\.py$",
                "isAsync": true,
                "cmd": "uvx ruff format ${fileBasename}"
            }
        ]
    },
    "python.terminal.activateEnvironment": true,
}